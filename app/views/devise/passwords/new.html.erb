<% content_for :title, "Forget Password | Dinner Dash" %>

<section class="h-screen flex justify-center items-center">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "w-[90%] sm:w-full max-w-md mx-auto bg-white p-10 rounded-lg shadow-lg" }) do |f| %>
    <h2 class="text-xl sm:text-2xl font-bold text-center pb-10 bruno">Forgot Your Pass? ðŸ”’</h2>

    <%= render 'devise/shared/error_messages', resource: resource %>

    <div class="mb-4 text-[0.8rem]">
      <%= f.label :email, class: 'block text-gray-700 font-medium mb-2' %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Enter your email', class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-gray-800' %>
    </div>

    <div class="mb-4 text-[0.8rem]">
      <%= f.submit 'Send Reset Instructions', class: 'w-full bg-black text-white py-2 rounded-lg transition-colors hover:bg-black cursor-pointer' %>
    </div>

    <div class="text-center mt-4 text-sm text-gray-600 text-[0.8rem]">
      Back to Login?
      <%= link_to 'Log in', new_session_path(resource_name), class: 'text-blue-500' %><br />
    </div>
  <% end %>
</section>
