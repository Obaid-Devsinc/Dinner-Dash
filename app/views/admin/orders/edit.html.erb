<% content_for :title, "Update Order Status | Dinner Dash" %>

<div class="p-4 min-h-screen">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-xl sm:text-2xl font-bold bruno">Update Order</h1>

    <%= link_to admin_orders_path,
      class: "flex items-center bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition" do %>
      <i class="fa-solid fa-arrow-left mr-2 text-sm"></i>
      Back
    <% end %>
  </div>

  <div class="rounded-xl p-2">
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-8">
      <div class="p-4 border border-gray-200 rounded-xl bg-gray-50">
        <p class="text-gray-500 mb-1">Order ID</p>
        <h2 class="text-sm font-normal"><%= @order.id %></h2>
      </div>

      <div class="p-4 border border-gray-200 rounded-xl bg-gray-50">
        <p class="text-gray-500 mb-1">Customer</p>
        <h2 class="text-sm font-normal"><%= "#{@order.first_name} #{@order.last_name}" %></h2>
      </div>

      <div class="p-4 border border-gray-200 rounded-xl bg-gray-50">
        <p class="text-gray-500 mb-1">Email</p>
        <h2 class="text-sm font-normal"><%= @order.email %></h2>
      </div>

      <div class="p-4 border border-gray-200 rounded-xl bg-gray-50">
        <p class="text-gray-500 mb-1">Total Amount</p>
        <h2 class="text-sm font-normal">$<%= number_to_currency(@order.total_amount, unit: '') %></h2>
      </div>
    </div>

    <div class="border border-gray-200 rounded-xl p-6 bg-gray-50">
      <h3 class="text-lg font-semibold mb-4">Update Status</h3>

      <%= form_with model: [:admin, @order] do |f| %>
        <div class="mb-6">
          <label class="block text-sm font-medium mb-2">Order Status</label>

          <%=
            f.select :status,
                     options_for_select(@statuses.map { |s| [s.titleize, s] }, @order.status),
                     {},
                     class: 'w-full border border-gray-300 rounded-lg px-3 py-3 bg-white text-gray-700 focus:outline-none focus:ring-1 focus:ring-blue-500'
          %>
        </div>

        <div class="flex justify-end gap-3">
          <%= link_to admin_orders_path,
            class: "px-4 py-2 rounded-lg border text-gray-700 hover:bg-gray-100" do %>
            Cancel
          <% end %>

          <%= f.submit 'Update Status', class: 'px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 cursor-pointer' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
