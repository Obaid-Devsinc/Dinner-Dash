<% content_for :title, 'Dashboard | Dinner Dash' %>

<div class="p-4 min-h-screen">
  <h1 class="text-2xl font-bold bruno mb-8">Dashboard</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-10">
    <div class="bg-white rounded-xl shadow-md p-6 flex items-center justify-between">
      <div>
        <p class="text-gray-500 font-medium">Pending Orders</p>
        <p class="text-2xl font-bold mt-2 text-gray-800"><%= @ordered_orders %></p>
      </div>
      <div class="bg-blue-100 text-blue-600 rounded-full p-4">
        <i class="fa-regular fa-clock text-xl"></i>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md p-6 flex items-center justify-between">
      <div>
        <p class="text-gray-500 font-medium">Completed Orders</p>
        <p class="text-2xl font-bold mt-2 text-gray-800"><%= @completed_orders %></p>
      </div>
      <div class="bg-blue-100 text-blue-600 rounded-full p-4">
        <i class="fa-regular fa-check-circle text-xl"></i>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md p-6 flex items-center justify-between">
      <div>
        <p class="text-gray-500 font-medium">Paid Orders</p>
        <p class="text-2xl font-bold mt-2 text-gray-800"><%= @paid_orders %></p>
      </div>
      <div class="bg-blue-100 text-blue-600 rounded-full p-4">
        <i class="fa-regular fa-credit-card text-xl"></i>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md p-6 flex items-center justify-between">
      <div>
        <p class="text-gray-500 font-medium">Cancelled Orders</p>
        <p class="text-2xl font-bold mt-2 text-gray-800"><%= @cancelled_orders %></p>
      </div>
      <div class="bg-green-100 text-green-600 rounded-full p-4">
        <i class="fa-solid fa-xmark text-xl"></i>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md p-6 flex items-center justify-between">
      <div>
        <p class="text-gray-500 font-medium">Total Customer</p>
        <p class="text-2xl font-bold mt-2 text-gray-800"><%= @total_customers %></p>
      </div>
      <div class="bg-blue-100 text-blue-600 rounded-full p-4">
        <i class="fa-regular fa-user text-xl"></i>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md p-6 flex items-center justify-between">
      <div>
        <p class="text-gray-500 font-medium">Total Revenue</p>
        <p class="text-2xl font-bold mt-2 text-gray-800">$ <%= number_to_currency(@total_revenue, unit: '') %></p>
      </div>
      <div class="bg-yellow-100 text-yellow-600 rounded-full p-4">
        <i class="fa-solid fa-dollar-sign text-xl"></i>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-md p-6">
    <h2 class="text-xl font-semibold mb-4">Latest Customers</h2>

    <div class="overflow-x-auto">
      <table class="min-w-full text-left divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-gray-500 text-sm font-medium">Image</th>
            <th class="px-6 py-3 text-gray-500 text-sm font-medium">Name</th>
            <th class="px-6 py-3 text-gray-500 text-sm font-medium">Email</th>
            <th class="px-6 py-3 text-gray-500 text-sm font-medium">Joined</th>
            <th class="px-6 py-3 text-gray-500 text-sm font-medium">Orders</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @latest_customers.each do |user| %>
            <tr class="<%= cycle('bg-white', 'bg-gray-50') %>">
              <td class="px-6 py-2">
                <%= image_tag(user.image.attached? ? url_for(user.image) : 'unknown.jpeg', alt: user.name, class: 'w-10 h-10 object-cover rounded-full') %>
              </td>
              <td class="px-6 py-4"><%= user.name %></td>
              <td class="px-6 py-4"><%= user.email %></td>
              <td class="px-6 py-4"><%= user.created_at.strftime('%Y-%m-%d') %></td>
              <td class="pl-12 py-4"><%= user.order_count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
