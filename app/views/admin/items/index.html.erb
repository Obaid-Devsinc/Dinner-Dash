<% content_for :title, "Menu Items | Dinner Dash" %>

<div class="p-4 min-h-screen">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-xl sm:text-2xl font-bold bruno">Menu Items</h1>
    <%= link_to new_admin_item_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition flex items-center" do %>
      <i class="fa-regular fa-plus mr-2"></i>
      Add Product
    <% end %>
  </div>

  <div class="bg-white rounded-xl overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-gray-500 text-sm font-medium">Image</th>
          <th class="px-6 py-3 text-left text-gray-500 text-sm font-medium">Title</th>
          <th class="px-6 py-3 text-left text-gray-500 text-sm font-medium">Price</th>
          <th class="px-6 py-3 text-left text-gray-500 text-sm font-medium">Category</th>
          <th class="px-6 py-3 text-left text-gray-500 text-sm font-medium">Retired</th>
          <th class="px-6 py-3 text-left text-gray-500 text-sm font-medium">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% if @items.any? %>
          <% @items.each do |item| %>
            <tr id="<%= dom_id(item) %>">
              <td class="px-6 py-2">
                <%= image_tag(item.image.attached? ? url_for(item.image) : 'unknown.jpeg', alt: item.title, class: 'w-10 h-10 object-cover rounded-sm') %>
              </td>
              <td class="px-6 py-2"><%= item.title %></td>
              <td class="px-6 py-2">$<%= number_to_currency(item.price, unit: '') %></td>
              <td class="px-6 py-2"><%= item.category.name %></td>
              <td class="pl-10 py-2">
                <% if item.retired? %>
                  <span class="text-red-600 font-semibold">Yes</span>
                <% else %>
                  <span class="text-green-600 font-semibold">No</span>
                <% end %>
              </td>
              <td class="px-6 pt-6 flex gap-3">
                <%= link_to edit_admin_item_path(item), class: "text-blue-600 hover:text-blue-800" do %>
                  <i class="fa-regular fa-pen-to-square"></i>
                <% end %>

                <%= link_to admin_item_path(item), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800" do %>
                  <i class="fa-regular fa-trash-can"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="px-6 text-center text-gray-500">
              <%= render 'shared/fallback', text: 'No Menu Items found' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @items.any? %>
      <div class="w-full flex justify-center mt-8 text-sm">
        <%= paginate @items %>
      </div>
    <% end %>
  </div>
</div>
