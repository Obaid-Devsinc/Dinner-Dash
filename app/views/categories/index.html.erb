<% content_for :title, 'Categories | Dinner Dash' %>

<div class="p-4 min-h-screen">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-xl sm:text-2xl font-bold bruno">Categories</h1>
    <%= link_to new_category_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition flex items-center" do %>
      <i class="fa-solid fa-plus mr-2"></i>
      Add Category
    <% end %>
  </div>

  <div class="bg-white rounded-xl overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <%= render partial: 'shared/table_header', collection: category_table_headers %>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% if @categories.any? %>
          <%= render @categories %>
        <% else %>
          <tr>
            <td colspan="4" class="px-6 text-center text-gray-500">
              <%= render 'shared/fallback', text: 'No Categories found' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @categories.any? %>
      <div class="w-full flex justify-center mt-8 text-sm">
        <%= paginate @categories %>
      </div>
    <% end %>
  </div>
</div>
