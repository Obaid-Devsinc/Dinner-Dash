<tr id="<%= dom_id(category) %>">
  <td class="px-6 py-2">
    <%= image_tag(category.image.attached? ? url_for(category.image) : 'unknown.jpeg', alt: category.name, class: 'w-10 h-10 object-cover rounded-sm') %>
  </td>
  <td class="px-6 py-2"><%= category.name %></td>
  <td class="pl-14 py-2"><%= category.items_count %></td>
  <td class="px-6 pt-6 flex gap-3">
    <%= link_to edit_category_path(category), class: "text-blue-600 hover:text-blue-800" do %>
      <i class="fa-regular fa-pen-to-square"></i>
    <% end %>

    <%= link_to category_path(category), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800" do %>
      <i class="fa-regular fa-trash-can"></i>
    <% end %>
  </td>
</tr>
