<div class="lg:col-span-1">
  <div class="sticky top-8 p-6 border border-gray-200 rounded-xl bg-gray-50">
    <h3 class="text-lg font-bold text-gray-900 mb-6">Order Summary</h3>

    <div class="space-y-4 mb-6">
      <% @cart_items.each do |item| %>
        <%= render 'new_order_item', item: item %>
      <% end %>
    </div>

    <div class="space-y-3 mb-6">
      <div class="flex justify-between">
        <span class="text-gray-600">Subtotal</span>
        <span class="font-medium"><%= number_to_currency(@cart_subtotal, unit: '$') %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-600">Shipping</span>
        <span class="font-medium text-green-600">FREE</span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-600">Tax - 8%</span>
        <span class="font-medium"><%= number_to_currency(@cart_tax, unit: '$') %></span>
      </div>
      <div class="border-t border-gray-300 pt-4 mt-4">
        <div class="flex justify-between items-center">
          <span class="text-xl font-bold text-gray-900">Total</span>
          <span class="text-xl font-bold text-gray-900"><%= number_to_currency(@cart_total, unit: '$') %></span>
        </div>
      </div>
    </div>

    <div class="w-full text-center">
      <%= link_to 'Back to the Cart', cart_path, class: 'text-blue-500 hover:text-blue-600 font-semibold' %>
    </div>
  </div>
</div>
