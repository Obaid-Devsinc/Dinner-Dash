<div class="flex gap-4 p-4 border border-gray-100 rounded-lg hover:shadow-sm transition-shadow">
  <div class="w-20 h-20 rounded-lg overflow-hidden bg-gray-100 shrink-0">
    <%= link_to item_path(oi.item) do %>
      <%= image_tag(oi.item.image.attached? ? url_for(oi.item.image) : 'unknown.jpeg', alt: oi.item.title, class: 'h-full w-full object-cover hover:scale-110 transition-transform') %>
    <% end %>
  </div>
  <div class="flex-1">
    <h4 class="font-medium text-gray-900">
      <%= link_to oi.item.title, item_path(oi.item), class: 'text-blue-500 hover:text-blue-600' %>
    </h4>
    <p class="text-gray-600">Quantity: <%= oi.quantity %></p>
    <p class="text-gray-600">Price per item: <%= number_to_currency(oi.price, unit: "$") %></p>
    <p class="font-medium mt-1">Subtotal: <%= number_to_currency(oi.price * oi.quantity, unit: "$") %></p>
  </div>
</div>
