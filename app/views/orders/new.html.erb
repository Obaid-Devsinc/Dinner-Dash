<% content_for :title, "Place Order | Dinner Dash" %>

<%= render 'shared/header', text: 'Place Order' %>

<%= form_with model: @order, url: orders_path, method: :post do |form| %>
  <section class="min-h-screen py-8 px-4 sm:px-6">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <%= render 'form', f: form %>

        <%= render 'order_summary' %>
      </div>
    </div>
  </section>
<% end %>
