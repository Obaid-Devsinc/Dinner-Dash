<div class="lg:col-span-1">
  <div class="sticky top-8 p-6 border border-gray-200 rounded-xl bg-gray-50">
    <h3 class="text-lg font-bold text-gray-900 mb-6">Order Summary</h3>

    <div class="space-y-4">
      <div class="flex justify-between">
        <span class="text-gray-600">Subtotal</span>
        <span class="font-semibold"><%= number_to_currency(@cart_subtotal, unit: '$') %></span>
      </div>

      <div class="flex justify-between">
        <span class="text-gray-600">Shipping</span>
        <span class="font-semibold text-green-600">FREE</span>
      </div>

      <div class="flex justify-between">
        <span class="text-gray-600">Tax - 8%</span>
        <span class="font-semibold"><%= number_to_currency(@cart_tax, unit: '$') %></span>
      </div>

      <div class="border-t border-gray-300 pt-4 mt-4">
        <div class="flex justify-between items-center">
          <span class="text-xl font-bold text-gray-900">Total</span>
          <span class="text-xl font-bold text-gray-900"><%= number_to_currency(@cart_total, unit: '$') %></span>
        </div>
      </div>
    </div>

    <% if user_signed_in?  %>
      <%= link_to new_order_path do %>
        <button class="w-full mt-6 bg-black text-white py-4 rounded-lg hover:bg-gray-800 transition-colors font-medium cursor-pointer">
          <i class="fas fa-lock mr-2"></i>
          Proceed to Checkout
        </button>
      <% end %>

      <%= link_to items_path, class: "w-full mt-3 border border-gray-300 text-gray-700 py-3 rounded-lg hover:bg-gray-50 transition-colors font-medium text-center block" do %>
        <i class="fas fa-arrow-left mr-2"></i>
        Continue Shopping
      <% end %>
    <% else %>
      <div class="pt-10 bg-blue-50 rounded-lg text-center">
        <%= link_to 'Please login to checkout', new_user_session_path, class: 'text-blue-600 hover:text-blue-800 font-medium' %>
      </div>
    <% end %>
  </div>
</div>
