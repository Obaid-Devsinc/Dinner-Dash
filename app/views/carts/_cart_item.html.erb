<turbo-frame id="cart_item_<%= item[:product]["id"] %>" class="flex flex-col sm:flex-row items-start sm:items-center gap-4 p-4 border border-gray-200 rounded-xl bg-white hover:shadow-md transition-shadow">
  <div class="w-24 h-24 rounded-lg overflow-hidden bg-gray-100 shrink-0">
    <!-- image can't be attached because session has no ActiveStorage object -->
    <%= image_tag('unknown.jpeg', alt: item[:product]["title"], class: 'h-full w-full hover:scale-110 transition-transform duration-300') %>
  </div>

  <div class="flex-1">
    <h3 class="font-medium text-gray-900 text-lg"><%= item[:product]["title"] %></h3>
    <p class="text-gray-600 mt-1"><%= item[:product]["description"] || "No description provide for this item." %></p>
    <p class="font-semibold text-gray-900 mt-2"><%= number_to_currency(item[:product]["price"], unit: '$') %> each</p>
  </div>

  <div class="w-full sm:w-auto flex items-center justify-between flex-row sm:flex-col sm:items-end gap-3">
    <div class="flex sm:flex-col items-center sm:items-end gap-3">
      <div class="flex items-center gap-2">
        <div class="flex items-center border border-gray-300 rounded-lg">
          <%= button_to cart_item_path(item[:product]["id"]), method: :patch, params: { quantity: item[:quantity] - 1 }, data: { turbo_stream: true }, class: "px-4 py-2 bg-gray-50 hover:bg-gray-100 text-gray-700 cursor-pointer" do %>
            -
          <% end %>
          <input type="text" value="<%= item[:quantity] %>" class="w-12 text-center border-x border-gray-300 py-2" readonly />
          <%= button_to cart_item_path(item[:product]["id"]), method: :patch, params: { quantity: item[:quantity] + 1 }, data: { turbo_stream: true }, class: "px-4 py-2 bg-gray-50 hover:bg-gray-100 text-gray-700 cursor-pointer" do %>
            +
          <% end %>
        </div>
      </div>

      <p class="font-bold text-gray-900 text-lg"><%= number_to_currency(item[:product]["price"] * item[:quantity], unit: '$') %></p>
    </div>

    <%= button_to cart_item_path(item[:product]["id"]),
              method: :delete,
              form: { data: { turbo_stream: true, turbo_confirm: "Are you sure?" } },
              class: "text-red-500 hover:text-red-700 flex items-center gap-1 cursor-pointer" do %>
      <i class="fas fa-trash mr-1"></i> Remove
    <% end %>
  </div>
</turbo-frame>
