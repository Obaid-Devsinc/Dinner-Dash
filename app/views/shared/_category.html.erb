<%= link_to category_path(category) do %>
  <div class="flex flex-col justify-center items-center gap-3 w-[150px] h-[150px] sm:w-[180px] sm:h-[180px]">
    <div class="w-[73%] h-[68%] rounded-full overflow-hidden border border-gray-300">
      <%= image_tag(category.image.attached? ? url_for(category.image) : 'unknown.jpeg', alt: category.name, class: 'w-full h-full hover:scale-110 transition-transform duration-300') %>
    </div>
    <p class="text-sm"><%= category.name %></p>
  </div>
<% end %>
