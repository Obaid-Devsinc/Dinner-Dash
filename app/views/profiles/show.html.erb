<% content_for :title, "Profile | Dinner Dash" %>

<section class="min-h-screen flex items-center p-4 sm:p-6">
  <div class="w-full max-w-lg mx-auto">
    <div class="rounded-2xl bg-white overflow-hidden border border-gray-100">
      <div class="h-32 bg-linear-to-r from-gray-50 to-white border-b border-gray-100 relative">
        <div class="absolute -bottom-12 left-1/2 transform -translate-x-1/2">
          <div class="relative">
            <div class="w-28 h-28 rounded-full border-4 border-white shadow-lg overflow-hidden bg-gray-100">
              <%= image_tag(current_user.image.attached? ? url_for(current_user.image) : 'unknown.jpeg', alt: current_user.name) %>
            </div>
            <div class="absolute bottom-2 right-2 w-4 h-4 bg-green-500 rounded-full border-2 border-white"></div>
          </div>
        </div>
      </div>

      <div class="pt-16 pb-8 px-6">
        <div class="text-center mb-6">
          <h1 class="text-2xl font-bold text-gray-900 mb-1"><%= current_user.name %></h1>
          <p class="text-gray-600 mb-4 flex items-center justify-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <%= current_user.email %>
          </p>
        </div>

        <div class="grid grid-cols-2 gap-4 mb-6">
          <div class="text-center p-3 bg-gray-50 rounded-lg">
            <p class="text-gray-600 mb-1">Member Since</p>
            <p class="font-semibold text-gray-900"><%= current_user.created_at.strftime('%b %Y') %></p>
          </div>
          <div class="text-center p-3 bg-gray-50 rounded-lg">
            <p class="text-gray-600 mb-1">Account Status</p>
            <p class="font-semibold text-green-600">Active</p>
          </div>
        </div>

        <div class="space-y-4 mb-8">
          <div class="flex items-center justify-between py-3 border-b border-gray-100">
            <div class="flex items-center gap-3">
              <div class="p-2 bg-gray-100 rounded-lg">
                <i class="fas fa-calendar-alt w-5 text-gray-600"></i>
              </div>
              <div>
                <p class="font-medium text-gray-900">Joined Date</p>
                <p class="text-xs text-gray-500">Full date</p>
              </div>
            </div>
            <p class="text-gray-700"><%= current_user.created_at.strftime('%B %d, %Y') %></p>
          </div>

          <div class="flex items-center justify-between py-3 border-b border-gray-100">
            <div class="flex items-center gap-3">
              <div class="p-2 bg-gray-100 rounded-lg">
                <i class="fas fa-clock w-5 text-gray-600"></i>
              </div>
              <div>
                <p class="font-medium text-gray-900">Last Updated</p>
                <p class="text-xs text-gray-500">Profile changes</p>
              </div>
            </div>
            <p class="text-gray-700"><%= current_user.updated_at.strftime('%B %d, %Y') %></p>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-3">
          <%= link_to edit_user_registration_path,
                class: "flex-1 flex items-center justify-center gap-2 bg-black text-white py-3 px-4 rounded-lg hover:bg-gray-800 transition-colors font-medium" do %>
            <i class="fas fa-edit w-5"></i>
            Edit Profile
          <% end %>

          <%= link_to destroy_user_session_path,
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "flex-1 flex items-center justify-center gap-2 bg-white border border-gray-300 text-gray-700 py-3 px-4 rounded-lg hover:bg-gray-50 transition-colors font-medium" do %>
            <i class="fas fa-sign-out-alt"></i>
            Log Out
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
