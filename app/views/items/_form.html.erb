<%= form_with model: @item do |f| %>
  <%= render 'shared/admin/error', record: @item %>

  <div class="mb-4">
    <%= f.label :title, class: 'block text-gray-700 font-semibold mb-1' %>
    <%= f.text_field :title, class: 'w-full border border-gray-300 px-4 py-3 rounded-lg outline-none' %>
  </div>

  <div class="mb-4">
    <%= f.label :description, class: 'block text-gray-700 font-semibold mb-1' %>
    <%= f.text_area :description, rows: 4, class: 'w-full border border-gray-300 px-4 py-3 rounded-lg outline-none' %>
  </div>

  <div class="mb-4">
    <%= f.label :price, class: 'block text-gray-700 font-semibold mb-1' %>
    <%= f.number_field :price, step: 0.01, class: 'w-full border border-gray-300 px-4 py-3 rounded-lg outline-none' %>
  </div>

  <div class="mb-4">
    <%= f.label :category_id, 'Category', class: 'block text-gray-700 font-semibold mb-1' %>
    <%= f.collection_select :category_id, Category.all, :id, :name, {}, class: 'w-full border border-gray-300 px-4 py-3 rounded-lg outline-none' %>
  </div>

  <div class="mb-4 flex items-center gap-2">
    <%= f.check_box :retired %>
    <%= f.label :retired, 'Retire this item ?', class: 'text-gray-700 font-semibold' %>
  </div>

  <div class="mb-4">
    <%= f.label :image, class: 'block text-gray-700 font-semibold mb-1' %>
    <%= f.file_field :image, class: 'w-full border border-gray-300 px-4 py-3 rounded-lg' %>
  </div>

  <div class="mt-6 w-full flex justify-end gap-3">
    <%= f.submit (@item.new_record? ? 'Create Item' : 'Update Item'), class: 'bg-blue-600 text-white px-4 py-3 rounded-lg hover:bg-blue-700 transition cursor-pointer' %>
    <%= link_to 'Cancel', items_path, class: 'bg-red-500 text-white px-4 py-3 rounded-lg hover:bg-red-600 transition cursor-pointer' %>
  </div>
<% end %>
