<tr class="<%= cycle('bg-white', 'bg-gray-50') %>">
  <td class="px-6 py-2">
    <%= image_tag(user.image.attached? ? url_for(user.image) : 'unknown.jpeg', alt: user.name, class: 'w-10 h-10 object-cover rounded-full') %>
  </td>
  <td class="px-6 py-4"><%= user.name %></td>
  <td class="px-6 py-4"><%= user.email %></td>
  <td class="px-6 py-4"><%= user.created_at.strftime('%Y-%m-%d') %></td>
  <td class="pl-12 py-4"><%= user.orders_count %></td>
</tr>
